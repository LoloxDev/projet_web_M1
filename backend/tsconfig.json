{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "node_modules"
  ]
}
